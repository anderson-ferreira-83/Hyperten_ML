{
  "preprocessing_config": {
    "data": {
      "file_name": "Hypertension-risk-model-main.csv",
      "target_column": "risco_hipertensao",
      "column_mapping": {
        "male": "sexo",
        "age": "idade",
        "currentSmoker": "fumante_atualmente",
        "cigsPerDay": "cigarros_por_dia",
        "BPMeds": "medicamento_pressao",
        "diabetes": "diabetes",
        "totChol": "colesterol_total",
        "sysBP": "pressao_sistolica",
        "diaBP": "pressao_diastolica",
        "BMI": "imc",
        "heartRate": "frequencia_cardiaca",
        "glucose": "glicose",
        "Risk": "risco_hipertensao"
      }
    },
    "preprocessing": {
      "missing_values": {
        "strategy": "median",
        "categorical_strategy": "mode"
      },
      "outliers": {
        "method": "iqr",
        "threshold": 1.5
      },
      "scaling": {
        "method": "standard"
      }
    },
    "feature_engineering": {
      "derived_features": [
        "pressao_arterial_media",
        "razao_pressao",
        "categoria_imc",
        "risco_cardiovascular"
      ],
      "binning": {
        "idade": {
          "bins": [
            30,
            40,
            50,
            60,
            70
          ],
          "labels": [
            "jovem",
            "adulto",
            "meia_idade",
            "idoso"
          ]
        },
        "imc": {
          "bins": [
            18.5,
            25,
            30,
            35
          ],
          "labels": [
            "normal",
            "sobrepeso",
            "obesidade_1",
            "obesidade_2"
          ]
        }
      }
    },
    "evaluation": {
      "metrics": [
        "accuracy",
        "precision",
        "recall",
        "f1_score",
        "f2_score",
        "roc_auc",
        "average_precision"
      ],
      "cross_validation": {
        "method": "stratified_kfold",
        "n_splits": 5,
        "shuffle": true,
        "random_state": 42
      },
      "threshold_optimization": {
        "method": "youden_index"
      }
    },
    "interpretability": {
      "shap": {
        "explainer_type": "tree",
        "sample_size": 1000
      },
      "lime": {
        "sample_size": 100
      }
    },
    "results": {
      "save_models": true,
      "save_figures": true,
      "figure_format": "svg",
      "figure_dpi": 300
    }
  },
  "data_shapes": {
    "original": [
      4240,
      13
    ],
    "X_train": [
      4676,
      12
    ],
    "X_test": [
      848,
      12
    ],
    "y_train": 4676,
    "y_test": 848
  },
  "features": [
    "sexo",
    "idade",
    "fumante_atualmente",
    "cigarros_por_dia",
    "medicamento_pressao",
    "diabetes",
    "colesterol_total",
    "pressao_sistolica",
    "pressao_diastolica",
    "imc",
    "frequencia_cardiaca",
    "glicose"
  ],
  "target_distribution": {
    "original": {
      "0": 2923,
      "1": 1317
    },
    "train_balanced": {
      "0": 2338,
      "1": 2338
    },
    "test": {
      "0": 585,
      "1": 263
    }
  },
  "preprocessing_steps": [
    "missing_values_imputation",
    "outliers_capping",
    "train_test_split",
    "feature_scaling",
    "smote_balancing"
  ],
  "quality_metrics": {
    "missing_values_removed": true,
    "classes_balanced": true,
    "features_scaled": true,
    "data_split_stratified": true
  }
}